{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "target": "esnext",
    "module": "esnext",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env", "node"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
